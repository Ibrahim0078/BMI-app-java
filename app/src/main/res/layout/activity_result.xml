<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Result">

    <TextView
        android:id="@+id/txtBMIchartdata"
        android:layout_width="320dp"
        android:layout_height="155dp"
        android:background="@drawable/chart_boarder"
        android:text="UnderWeight\t\t\t\t\t less then 18.5 \nHealthy\t\t\t\t\t\t\t\t\t\t\t\t 18.5 - 24.9 \nOverweight\t\t\t\t\t\t\t 25 - 29.9\nObese\t\t\t\t\t\t\t\t\t\t\t\t   30 - 39.9\nSeverly Obese\t\t\t  greater then 40"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.736" />

    <TextView
        android:id="@+id/txtBMIscorelabel"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:background="@drawable/small_text_view"
        android:gravity="center_vertical"
        android:text="Your BMI Score"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />

    <TextView
        android:id="@+id/txtBMIscore"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:background="@drawable/edittext_background"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19" />

    <SeekBar
        android:id="@+id/seekBarBMI"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:max="100"
        android:progress="0"
        android:progressTint="@color/black"
        android:thumbTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.297" />

    <TextView
        android:id="@+id/txtBMICategorylabel"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:background="@drawable/small_text_view"
        android:gravity="center_vertical"
        android:text="Your category"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />

    <TextView
        android:id="@+id/txtBMIchart"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:background="@drawable/button_background"
        android:gravity="center_vertical"
        android:text="BMI fitness chart"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.513" />

    <TextView
        android:id="@+id/txtresult"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:background="@drawable/edittext_background"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/txtBMICategory"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:background="@drawable/edittext_background"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19" />


</androidx.constraintlayout.widget.ConstraintLayout>